{
  "name": "@gadicc/discourse2",
  "version": "0.0.1",
  "exports": {
    ".": "./src/index.ts"
  },
  "tasks": {
    "dev": "deno run --watch src/index.ts",
    "ci": "deno check src/* && deno lint src/* && deno task test",
    "test": "deno test --allow-env --allow-read --allow-write --allow-net",
    "schema:sync": "deno run --allow-env --allow-write --allow-read --allow-net --allow-run src/schema-sync.ts",
    "schema:fetch": "curl -o src/openapi.json https://docs.discourse.org/openapi.json",
    "schema:ts": "deno run --allow-read --allow-write --allow-env npm:openapi-typescript src/openapi.json -o src/schema.d.ts",
    "generate": "deno run --allow-write src/generate.ts"
  },
  "imports": {
    "@gadicc/fetch-mock-cache": "jsr:@gadicc/fetch-mock-cache@^2.0.2",
    "@std/assert": "jsr:@std/assert@1",
    "ajv": "npm:ajv@^8.17.1",
    "ajv-errors": "npm:ajv-errors@^3.0.0",
    "openapi-types": "npm:openapi-types@^12.1.3",
    "openapi-typescript": "npm:openapi-typescript@^7.4.1"
  }
}
